@page
@model TiendaPromElec.Pages.IndexModel
@{
    ViewData["Title"] = "Catálogo de Productos";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - PromElec</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar bg-dark border-bottom border-body" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">PromElec Tienda</a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="text-center">
            <h1 class="display-4">Nuestro Catálogo</h1>
        </div>

        <div class="row">
            @foreach (var item in Model.Product)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><small class="text-muted">Marca: @item.Brand</small></p>
                            <p class="card-text"><strong>Precio: @item.Price.ToString("C")</strong></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>